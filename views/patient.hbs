                        y: 5
                    },
                    {
                        name: "Acetaminophen",
                        y: 3
                    },
                    {
                        name: "Lidocaine",
                        y: 1
                    },
                    {
                        name: "Ibuprofin",
                        y: 4
                    },
                    {
                        name: "Glycerin",
                        y: 2
                    },
                    {
                        name: "Salicycli Acid",
                        y: 1
                    }
                ],
            }
        ]
    });

</script>

</html>