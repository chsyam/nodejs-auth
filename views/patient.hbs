<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' />
    <link rel="stylesheet" href="styles/style.css">
</head>

<body>
    <nav>
        <h4>CareTaker Portal</h4>
        <ul>
            <li><a href='/logout'>Logout</a></li>
        </ul>
    </nav>
    <div class="body_section">
        <div class="profile">
            <div class="image">
                <img src="./images/logo.jpg" width="120" height="120" alt="profile_picture" />
            </div>
            <div class="details patientInfo">
                {{#each patientsData}}
                <div class="item">
                    <label>Patient Name:</label>
                    <div class="value">{{name}}</div>
                </div>
                <div class="item">
                    <label>DOB</label>
                    <div class="value">{{dob}}</div>
                </div>
                <div class="item">
                    <label>Weight (pounds)</label>
                    <div class="value">{{weight}}</div>
                </div>
                <div class="item">
                    <label>Height (Feet)</label>
                    <div class="value">{{height}}</div>
                </div>
                <div class="item">
                    <label>Blood Group</label>
                    <div class="value">{{bloodgroup}}</div>
                </div>
                <div class="item">
                    <label>BMI</label>
                    <div class="value">{{bmi}}</div>
                </div>
                <div class="item">
                    <label>Phone Number</label>
                    <div class="value">{{phone}}</div>
                </div>
                <div class="item">
                    <label>Email ID</label>
                    <div class="value">{{email}}</div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="menu">
            <div class="menu_option" id="option_1">Summary</div>
            <div class="menu_option" id="option_2">Care Team</div>
            <div class="menu_option" id="option_3">Condition</div>
            <div class="menu_option" id="option_4">Medication</div>
            <div class="menu_option" id="option_5">Allergies</div>
            <div class="menu_option" id="option_6">Labs</div>
        </div>
        <div class="summary">
            <div id="care_team">
                <div class="section_label">Care team</div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CareTaker</th>
                            <th>Email</th>
                            <th>Speciality</th>
                            <th>profile</th>
                        </tr>
                    </thead>
                    <tbody class="careteamInfo">
                        {{#each careTeamData}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{speciality}}</td>
                            <td><a href="/profile">view</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="conditions">
                <div class="section_label">Conditions</div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Symptom Name</th>
                            <th>Identified On</th>
                        </tr>
                    </thead>
                    <tbody class="conditionsInfo">
                        {{#each conditionsData}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{identifiedOn}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="medications">
                <div class="section_label">Medications</div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Medication Name</th>
                            <th>Dosage</th>
                            <th>Shedule</th>
                            <th>Time Taken</th>
                        </tr>
                    </thead>
                    <tbody class="medicationInfo">
                        {{#each medicationData}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{dosage}}</td>
                            <td>{{shedule}}</td>
                            <td>{{timetotake}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="allergies">
                <div class="section_label">Allergies</div>
                No Allergies Identified
            </div>
            <div id="lab_tests">
                <div class="section_label">Analytics</div>
                No Tests are conducted.
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        $("#option_1").css("background-color", "rgb(5, 5, 40)");

        function makeUp() {
            $("#option_1").css("background-color", "rgb(95, 95, 247)");
            $("#option_2").css("background-color", "rgb(95, 95, 247)");
            $("#option_3").css("background-color", "rgb(95, 95, 247)");
            $("#option_4").css("background-color", "rgb(95, 95, 247)");
            $("#option_5").css("background-color", "rgb(95, 95, 247)");
            $("#option_6").css("background-color", "rgb(95, 95, 247)");

            $("#care_team").hide();
            $("#conditions").hide();
            $("#medications").hide();
            $("#allergies").hide();
            $("#lab_tests").hide();
        }

        $("#option_1").click(function () {
            makeUp();
            $("#option_1").css("background-color", "rgb(5, 5, 40)");

            $("#care_team").show();
            $("#conditions").show();
            $("#medications").show();
            $("#allergies").show();
            $("#lab_tests").show();
        });

        $("#option_2").click(function () {
            makeUp();
            $("#option_2").css("background-color", "rgb(5, 5, 40)");
            $("#care_team").show();
        });

        $("#option_3").click(function () {
            makeUp();
            $("#option_3").css("background-color", "rgb(5, 5, 40)");
            $("#conditions").show();
        });

        $("#option_4").click(function () {
            makeUp();
            $("#option_4").css("background-color", "rgb(5, 5, 40)");
            $("#medications").show();
        });

        $("#option_5").click(function () {
            makeUp();
            $("#option_5").css("background-color", "rgb(5, 5, 40)");
            $("#allergies").show();
        });

        $("#option_6").click(function () {
            makeUp();
            $("#option_6").css("background-color", "rgb(5, 5, 40)");
            $("#lab_tests").show();
        });
    });
</script>

</html>