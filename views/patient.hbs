<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script src="https://code.highcharts.com/highcharts.js"></script>
        <script src="https://code.highcharts.com/modules/series-label.js"></script>
        <script src="https://code.highcharts.com/modules/export-data.js"></script>
        <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' />
    <link rel="stylesheet" href="styles/style.css">
</head>

<body>
    <nav>
        <h4>CareTaker Portal</h4>
        <ul>
            <li><a href='/logout'>Logout</a></li>
        </ul>
    </nav>
    <div class="body_section">
        <div class="profile">
            <div class="image">
                <img src="./images/logo.jpg" width="120" height="120" alt="profile_picture" />
            </div>
            <div class="details patientInfo">
                {{#each patientsData}}
                <div class="item">
                    <label>Patient Name:</label>
                    <div class="value">{{name}}</div>
                </div>
                <div class="item">
                    <label>DOB</label>
                    <div class="value">{{dob}}</div>
                </div>
                <div class="item">
                    <label>Weight (pounds)</label>
                    <div class="value">{{weight}}</div>
                </div>
                <div class="item">
                    <label>Height (Feet)</label>
                    <div class="value">{{height}}</div>
                </div>
                <div class="item">
                    <label>Blood Group</label>
                    <div class="value">{{bloodgroup}}</div>
                </div>
                <div class="item">
                    <label>BMI</label>
                    <div class="value">{{bmi}}</div>
                </div>
                <div class="item">
                    <label>Phone Number</label>
                    <div class="value">{{phone}}</div>
                </div>
                <div class="item">
                    <label>Email ID</label>
                    <div class="value">{{email}}</div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="menu">
            <div class="menu_option" id="option_1">Summary</div>
            <div class="menu_option" id="option_2">Care Team</div>
            <div class="menu_option" id="option_3">Condition</div>
            <div class="menu_option" id="option_4">Medication</div>
            {{!-- <div class="menu_option" id="option_5">Allergies</div> --}}
            <div class="menu_option" id="option_6">Analytics</div>
        </div>
        <div class="summary">
            <div id="care_team">
                <div class="section_label">Care team</div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CareTaker</th>
                            <th>Email</th>
                            <th>Speciality</th>
                            <th>profile</th>
                        </tr>
                    </thead>
                    <tbody class="careteamInfo">
                        {{#each careTeamData}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{speciality}}</td>
                            <td><a href="/profile">view</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="conditions">
                <div class="section_label">Conditions</div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Symptom Name</th>
                            <th>Identified On</th>
                        </tr>
                    </thead>
                    <tbody class="conditionsInfo">
                        {{#each conditionsData}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{identifiedOn}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="medications">
                <div class="section_label">Medications</div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NDC</th>
                            <th>Box</th>
                            <th>Quantity</th>
                            <th>Brand Name</th>
                            <th>Generic Name</th>
                            <th>Time to Take</th>
                            <th>Taken Today</th>
                        </tr>
                    </thead>
                    <tbody class="medicationInfo">
                        {{#each medicationData}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{ndc}}</td>
                            <td>{{box}}</td>
                            <td>{{quantity}}</td>
                            <td>{{brand_name}}</td>
                            <td>{{generic_name}}</td>
                            <td>{{time}}</td>
                            <td>
                                {{#if taken}}
                                    true
                                {{else}}
                                    false
                                {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div id="lab_tests">
                <div class="section_label">Analytics</div>
                {{!-- <table>
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>generic_name</th>
                            <th>alarm response time</th>
                            <th>medication ingestion failure rate</th>
                            <th>ingestion time per medication</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>SILICEA</td>
                            <td>5 mins</td>
                            <td>2%</td>
