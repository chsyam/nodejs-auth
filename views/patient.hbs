                                <td>8 mins</td>
                                <td>1%</td>
                                <td>2 mins</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>IBUPROFIN</td>
                                <td>6 mins</td>
                                <td>4%</td>
                                <td>2 mins</td>
                        </tr>
                        <tr>
                            <td>6</td>
                            <td>GLYCERIN</td>
                            <td>8 mins</td>
                            <td>2%</td>
                            <td>4 mins</td>
                        </tr>
                        <tr>
                            <td>7</td>
                            <td>SALICYLIC ACID</td>
                            <td>9 mins</td>
