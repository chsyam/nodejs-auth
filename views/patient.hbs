            }
        ]
    });
    Highcharts.chart('chart3', {
        chart: {
            type: 'column',
        },
        title: {
            text: "Medication ingestion failure rate over 30 Days",
        },
        legend: {
            enabled: false,
        },
        credits: {
            enabled: false,
        },

        subtitle: {
            text: null,
            align: 'left'
        },

        yAxis: {
            title: {
                text: 'ingestion failure rate'
            }
        },

        xAxis: {
            title: {
                text: null
            },
            type: 'category'
        },
        accessibility: {
            announceNewData: {
                enabled: true
            }
        },
        plotOptions: {
            series: {
                borderWidth: 0,
                dataLabels: {
                    enabled: true,
                    format: '{point.y}%'
                }
            }
        },

        series: [
            {
                name: 'Medicines',
                colorByPoint: true,
                data: [
                    {
                        name: "Silicia",
